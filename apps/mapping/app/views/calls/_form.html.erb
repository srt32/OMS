    <%= f.label :API_response_filename %><br />
    <%= f.text_field :API_response_filename, :placeholder => "testOutput.txt" %>
  </div>
  <div class="field">
    <%= f.label :DP_rails_filename %><br />
    <%= f.text_field :DP_rails_filename, :placeholder => "OutputFile.txt" %>
  </div>
  <div class="field">
    <%= f.label :DP_DB_filename %><br />
    <%= f.text_field :DP_DB_filename, :placeholder => "OutputFileDB.txt" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
